<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="White" />
    <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="Black" />
    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextColorKey}" Color="White" />
    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="{StaticResource SystemAccentColor}" />
    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#888" />
    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="{Binding Source={x:Static SystemColors.HighlightTextBrush}, Path=Color, Mode=OneWay}" />


    <SolidColorBrush x:Key="WidgetMouseOver" Color="#DDD" />
    <SolidColorBrush x:Key="WidgetBackground" Color="#EEE" />
    <SolidColorBrush x:Key="WindowBorderColor" Color="Gray" />
    <SolidColorBrush x:Key="ButtonMouseOver" Color="#DDD" />

</ResourceDictionary>